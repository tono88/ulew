<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.product.detail</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="POS Product Detail" data-key="pos_product_detail">
                    <h2>Default Configuration for POS Product Detail</h2>
                    <div class="row mt16 o_settings_container" id="coupon_config">
                        <div class="o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="" string="Product Fields"/>
                                <div class="text-muted">
                                    Fields that will appear in the product's detail tooltip.
                                </div>
                                <div class="text-muted">
                                    <field name="product_details_data" widget="many2many_tags" options="{'no_create_edit': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
